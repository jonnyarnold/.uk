<%= erb :'blog/header' %>

<div class='blog page'>
  <h2>My Posts</h2>

  <ul>
    <% @recent_posts.each do |post| %>
      <li>
        <%= post.publish_date.strftime('%d %b %Y') %>: 
        <a href='<%= post.url %>'><b><%= post.title %></b></a> 
        <ul class='tags'>
          <% post.tags.each do |tag| %>
            <li><%= tag.to_s %></li>
          <% end %>          
        </ul>
      </li>
    <% end %>
  </ul>
</div>
