<div class='blog index'>
  <h1>My Blog</h1>
  <p>The many witterings of <a href='/'>Jonny Arnold</a>.</p>

  <ul class='post-index'>
    <% recent_posts.each do |post| %>
      <li class='post'>
        <span class='post-date'><%= post.publish_date.strftime('%d %b %Y') %></span>
        <span class='divider'>&nbsp;</span>
        <a class='post-title' href='<%= post.url %>' <%= post.is_redirect? ? "target='_blank'" : nil %>><%= post.title %></a>
      </li>
    <% end %>
  </ul>
</div>
